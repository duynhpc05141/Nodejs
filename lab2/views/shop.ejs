<!doctype html>
<html lang="en">
    <head>
        <title>Title</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>

    <body class="container">
        <header>
            <nav class="navbar navbar-expand-lg bg-light">
                <div class="container-fluid">
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                      <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">trang chu</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/shop">san pham</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/addnew">them san pham</a>
                      </li>
                    </ul>
                  </div>
                </div>
            </nav>
        </header>
        <main>
            <div class="container-fluid">
                <div class="row">
                    <div class="grid mt-3">
                        <% for (let product of products) { %>
                        <article class="card product-item">
                            <header class="card__header">
                                <a href="/product/<%= product.id %>"><h1 class="product__title" ><%= product.title %></h1></a>
                            </header>
                            <div class="card__image">
                                <img src="images/<%= product.imageURL%>" alt="A Book" height="100px">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= product.price %></h2>
                                <p class="product__description"><%=product.description %></p>
                            </div>
                            <div class="card__actions d-3">
                                <button class="btn btn-primary">Add to Cart</button>
                            </div>
                        </article>
                        <% } %>
                    </div>
                </div>
            </div>
            
        </main>
        <footer>
            <!-- place footer here -->
        </footer>
        <!-- Bootstrap JavaScript Libraries -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
