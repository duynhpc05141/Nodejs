<%- include('headerAdmin.ejs') %>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Người dùng</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="mb-2">
                <a class="btn btn-dark" href="/addUser">Thêm</a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Họ Tên</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>Quản trị</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="listUser">
                        <% for(users of users) {
                            let stt = 1;
                            let role = (users.role_id == 1) ? 'Admin' : 'User';
                        %>
                        <tr>
                            <td><%=stt%></td>
                            <td><%=users.customer_name%></td>
                            <td><%=users.customer_email%></td>
                            <td><%=users.customer_phone_number%></td>
                            <td><%=users.customer_address%></td>
                            <td><%=role%></td>
                            <td>
                                <a href="/updateUser" class="btn btn-primary">Sửa</a>
                                <a class="btn btn-danger" data-user-id="" id="btnDelete">Xóa</a>
                            </td>
                          </tr>
                        <% }%>
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>

</div>
<%- include('footerAdmin.ejs') %>
