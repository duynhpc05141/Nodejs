<%- include('headerAdmin.ejs') %>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Thêm người dùng</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <form >
                    <div class="col-md-8 position-relative">
                      <label for="validationTooltip01" class="form-label">Họ tên</label>
                      <input type="text" class="form-control" id="name" required>
                      <div class="valid-tooltip">
                        Looks good!
                      </div>
                    </div>
                    <div class="col-md-8 position-relative p-2">
                      <label for="validationTooltip02" class="form-label">Email</label>
                      <input type="text" class="form-control" id="email" required>
                      <div class="valid-tooltip">
                        Looks good!
                      </div>
                    </div>
                    <div class="col-md-8 position-relative p-2">
                        <label for="validationTooltip02" class="form-label">SĐT</label>
                        <input type="text" class="form-control" id="phone" required>
                        <div class="valid-tooltip">
                          Looks good!
                        </div>
                    </div>
                    <div class="col-md-8 position-relative p-2">
                        <label for="validationTooltip02" class="form-label">Địa chỉ</label>
                        <input type="text" class="form-control" id="address" required>
                        <div class="valid-tooltip">
                          Looks good!
                        </div>
                    </div>
                    <div class="col-md-8 position-relative p-2">
                        <label for="validationTooltip02" class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control" id="pass" required>
                        <div class="valid-tooltip">
                          Looks good!
                        </div>
                    </div>
                    <div class="col-md-12 position-relative mt-4">
                      <label for="validationTooltip04" class="form-label">Quản trị</label>
                      <select class="form-select" id="role" required>
                        <option value="2">User</option>
                        <option value="1">Admin</option>
                      </select>
                      <div class="invalid-tooltip">
                        Please select a valid state.
                      </div>
                    </div>
                    <div class="col-12 mt-4">
                      <button class="btn btn-dark" type="submit" id="btnAddUser">Thêm</button>
                      <a href="/user" class="btn btn-dark">Danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<%- include('footerAdmin.ejs') %>