<%- include('../headerAdmin.ejs') %>
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Người dùng</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="mb-2">
                <a class="btn btn-dark" href="/admin/addUser">Thêm</a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Họ Tên</th>
                            <th>Email</th>
                            <th>SĐT</th>
                            <th>Địa chỉ</th>
                            <th>Quản trị</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody id="listUser">
                        <%let stt = 1; for(users of users) {
                            
                            let role = (users.role_id == 1) ? 'Admin' : 'User';
                        %>
                        <tr>
                            <td><%=stt%></td>
                            <td><%=users.customer_name%></td>
                            <td><%=users.customer_email%></td>
                            <td><%=users.customer_phone_number%></td>
                            <td><%=users.customer_address%></td>
                            <td><%=role%></td>
                            <td class="d-flex ">
                                <a href="/admin/updateUser/<%= users._id %>" class="btn btn-dark mr-1">Sửa</a>
                                <form action="/admin/deleteUser/<%= users._id%>?_method=DELETE" method="post">
                                    <button type="submit" class="btn btn-danger mr-1"  id="btnDelete" >Xóa</button>
                                </form>
                                
                            </td>
                          </tr>
                        <% stt++; }%>
                    </tbody>
                </table>
                
            </div>
        </div>
    </div>

</div>
<%- include('../footerAdmin.ejs') %>
