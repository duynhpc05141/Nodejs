<%- include('../headerAdmin.ejs') %>
<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Cập nhật người dùng</h1>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
      <div class="card-body">
        <div class="table-responsive" >
          <form action="/admin/updateUser/<%= users._id %>" method="POST">
            <div class="col-md-8 position-relative" >
              <label for="validationTooltip01" class="form-label">Họ tên</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= users.customer_name %>"  required>
              <div class="valid-tooltip">
                Looks good!
              </div>
            </div>
            <div class="col-md-8 position-relative p-2">
              <label for="validationTooltip02" class="form-label">Email</label>
              <input type="text" class="form-control" id="email" name="email" value="<%= users.customer_email %>" required>
              <div class="valid-tooltip">
                Looks good!
              </div>
            </div>
            <div class="col-md-8 position-relative p-2">
                <label for="validationTooltip02" class="form-label">SĐT</label>
                <input type="text" class="form-control" id="phone" name="phone" value="<%= users.customer_phone_number %>" required>
                <div class="valid-tooltip">
                  Looks good!
                </div>
            </div>
            <div class="col-md-8 position-relative p-2">
                <label for="validationTooltip02" class="form-label">Địa chỉ</label>
                <input type="text" class="form-control" id="address" name="address" value="<%= users.customer_address %>" required>
                <div class="valid-tooltip">
                  Looks good!
                </div>
            </div>
            <!-- <div class="col-md-8 position-relative p-2">
                <label for="validationTooltip02" class="form-label">Mật khẩu</label>
                <input type="password" class="form-control" id="pass" name="pass" value="" required>
                <div class="valid-tooltip">
                  Looks good!
                </div>
            </div> -->
            <div class="col-md-12 position-relative mt-4">
              <label for="validationTooltip04" class="form-label">Quản trị</label>
              <select class="form-select" id="role" name="role" required>
                <option value="2" <% if (users.role_id === 2) { %> selected <% } %>>User</option>
                <option value="1" <% if (users.role_id === 1) { %> selected <% } %>>Admin</option>
              </select>
              <div class="invalid-tooltip">
                Please select a valid state.
              </div>
            </div>
            <div class="col-12 mt-4">
              <button class="btn btn-dark" type="submit" id="btnAddUser">Cập nhật</button>
              <a href="/admin/user" class="btn btn-dark">Danh sách</a>
            </div>
          </form>
        </div>
      </div>
    </div>

</div>
<%- include('../footerAdmin.ejs') %>